{
  "name": "Nodalink AppDaemon Engine",
  "version": "1.0.0",
  "slug": "appdaemon-nodalink",
  "description": "Context-aware automation engine for Home Assistant using AppDaemon",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "map": ["config", "share"],
  "options": {
    "time_zone": "UTC",
    "scenario_file": "/config/appdaemon/apps/Nodalink/scenarios.json",
    "config_file": "/config/appdaemon/apps/Nodalink/config.json",
    "log_file": "/config/appdaemon/apps/Nodalink/logs/unmatched_scenarios.log",
    "test_mode": false
  },
  "schema": {
    "time_zone": "str",
    "scenario_file": "str",
    "config_file": "str",
    "log_file": "str",
    "test_mode": "bool"
  },
  "services": ["mqtt:need"],
  "homeassistant_api": true,
  "hassio_api": true,
  "hassio_role": "homeassistant",
  "host_network": false,
  "privileged": [],
  "full_access": false,
  "apparmor": true,
  "devices": [],
  "environment": {
    "LOG_LEVEL": "info"
  },
  "tmpfs": "size=100m,uid=1000",
  "image": "ghcr.io/home-assistant/{arch}-addon-nodalink-appdaemon"
}
