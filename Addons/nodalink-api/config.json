{
  "name": "Nodalink API Server",
  "version": "1.0.0",
  "slug": "nodalink-api",
  "description": "FastAPI REST server for Nodalink scenario management",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "map": ["config", "share"],
  "ports": {
    "8002/tcp": 8002
  },
  "ports_description": {
    "8002/tcp": "Nodalink API server"
  },
  "options": {
    "port": 8002,
    "host": "0.0.0.0",
    "scenario_file": "/config/appdaemon/apps/Nodalink/scenarios.json",
    "config_file": "/config/appdaemon/apps/Nodalink/config.json",
    "log_file": "/config/appdaemon/apps/Nodalink/logs/unmatched_scenarios.log",
    "cors_origins": ["*"]
  },
  "schema": {
    "port": "port",
    "host": "str",
    "scenario_file": "str",
    "config_file": "str",
    "log_file": "str",
    "cors_origins": ["str"]
  },
  "services": [],
  "homeassistant_api": false,
  "hassio_api": false,
  "hassio_role": "default",
  "host_network": false,
  "privileged": [],
  "full_access": false,
  "apparmor": true,
  "devices": [],
  "environment": {
    "LOG_LEVEL": "info"
  },
  "tmpfs": "size=50m,uid=1000",
  "image": "ghcr.io/home-assistant/{arch}-addon-nodalink-api"
}
